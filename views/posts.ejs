<!DOCTYPE html>
<html>
<head>
<title>Title of the document</title>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"> </script>
</head>

<body>
 <% for(var i=0; i < posts.length; i++) { %>
    <ul>

      <li><b> Title: </b> <a href="/posts/<%= posts[i].id %>"><%= posts[i].title %></a> 



      		<div class="btn btn-danger nodemon" id="<%= posts[i].id %>"></div>
      				
	       		
      </li>
	</ul>

  <% } %>

	<script type="text/javascript">

					$('.nodemon').click(callDelete)
					function callDelete(){
					console.log(this.id)
					$.ajax({
	   				 	url: '/posts/' + this.id,
	    				type: 'DELETE',
	    				dataType: 'json',
	    				success: function(result) {
	        				//console.log(result)
	        				//hack for forcing page reload
	        				location.reload()
	    }
	})
};
</script>
  
</body>

</html>
 



